@model Veiculos.Models.Veiculo

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar Cadastro do Veículo</h1>
<hr />

<div>
    <h3>Veículo</h3>
    <br />
    <dl class="row">
        <dt class="col-sm-2" style="margin-top:10px">
            @Html.DisplayNameFor(m => m.Id)
        </dt>
        <dd class="col-sm-10" style="margin-top:10px">
            @Html.DisplayFor(m => m.Id)
        </dd>
        <dt class="col-sm-2" style="margin-top:10px">
            @Html.DisplayNameFor(m => m.Name)
        </dt>
        <dd class="col-sm-10" style="margin-top:10px">
            @Html.DisplayFor(m => m.Name)
        </dd>
        <dt class="col-sm-2" style="margin-top:10px">
            @Html.DisplayNameFor(m => m.Marca)
        </dt>
        <dd class="col-sm-10" style="margin-top:10px">
            @Html.DisplayFor(m => m.Marca)
        </dd>
        <dt class="col-sm-2" style="margin-top:10px">
            @Html.DisplayNameFor(m => m.Cor)
        </dt>
        <dd class="col-sm-10" style="margin-top:10px">
            @Html.DisplayFor(m => m.Cor)
        </dd>
        <dt class="col-sm-2" style="margin-top:10px">
            @Html.DisplayNameFor(m => m.Ano)
        </dt>
        <dd class="col-sm-10" style="margin-top:25px">
            @Html.DisplayFor(m => m.Ano)
        </dd>
        <dt class="col-sm-2" style="margin-top:10px">
            @Html.DisplayNameFor(m => m.Placa)
        </dt>
        <dd class="col-sm-10" style="margin-top:10px">
            @Html.DisplayFor(m => m.Placa)
        </dd>
        <dt class="col-sm-2" style="margin-top:10px">
            @Html.DisplayNameFor(m => m.Kms)
        </dt>
        <dd class="col-sm-10" style="margin-top:10px">
            @Html.DisplayFor(m => m.Kms)
        </dd>
        <dt class="col-sm-2" style="margin-top:10px">
            @Html.DisplayNameFor(m => m.Combustivel)
        </dt>
        <dd class="col-sm-10" style="margin-top:25px">
            @Html.DisplayFor(m => m.Combustivel)
        </dd>
        <dt class="col-sm-2" style="margin-top:10px">
            @Html.DisplayNameFor(m => m.ValorVenda)
        </dt>
        <dd class="col-sm-10" style="margin-top:20px">
            @Html.DisplayFor(m => m.ValorVenda)
        </dd>
        <dt class="col-sm-2" style="margin-top:30px">
            @Html.DisplayNameFor(m => m.Foto)
        </dt>
        <dd class="col-sm-10" style="margin-top:10px">
            @{
                try
                {
                    var base64 = Convert.ToBase64String(@Model.Foto);
                    if (!string.IsNullOrEmpty(base64))
                    {
                        var imgSrc = String.Format("data:image/png;base64, {0}", base64);
                        <img class="img-fluid" src="@imgSrc" width="100">
                    }
                }
                catch
                {
                   <img class="img-fluid" 
                   src="https://th.bing.com/th/id/R.4a934d0f089e34e4e5a2a354592ff4f0?rik=6Sws0rp3ccaSWw&pid=ImgRaw&r=0"
                   width="70"/> 
                }
            }
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger btn-sm" />
        <a class="btn btn-dark text-white btn-sm" asp-action="Index">Voltar</a>
    </form>
</div>
